староста(3, 234).

% Факты о предметах и оценках
предмет(1, 'Математический анализ', 'Математика').
предмет(2, 'Алгебра и геометрия', 'Математика').
предмет(3, 'Программирование на Python', 'Информатика').
предмет(4, 'Дискретная математика', 'Информатика').

оценка(3, 123, 4).
оценка(4, 123, 5).
оценка(3, 456, 3).
