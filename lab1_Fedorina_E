группа(2, 'Информатика', 201, 2019).
группа(3, 'Математика', 301, 2018).

% Факты о студентах
студент(123, 'Артамонов Тимофей Ясуович', '+7(123)456-78-90').
студент(456, 'Федорина Эрнест Некрофосович', '+7(234)567-89-01').
студент(789, 'Маслова Анастасия Маудзе-Дуновна', '+7(345)678-90-12').
студент(234, 'Коротун Илья Инвокерович', '+7(456)789-01-23').
студент(567, 'Морозов Михаил Лешракович', '+7(567)890-12-34').
студент(891, 'Смирнов-Мальцев Егор Сиамангович', '+7(678)901-23-45').

% Факты об учебе
учится_в(1, 123).
учится_в(1, 456).
учится_в(2, 789).
