оценка(3, 567, 4).
оценка(4, 891, 5).
оценка(1, 891, 3).

% Факты о стипендиях
стипендия(1, 'Социальная', 15000).
стипендия(2, 'За успехи', 20000).

факультет('Математики и информатики', 'РУДН').

% Факты о профессорах
профессор('Иванов Иван Иванович', 'Математический анализ').
профессор('Петров Петр Петрович', 'Алгебра и геометрия').
профессор('Сидоров Сидор Сидорович', 'Программирование на Python').
профессор('Кузнецова Ольга Васильевна', 'Дискретная математика').

% Факты о кафедрах
кафедра('Математический анализ', 'Кафедра математического анализа').
кафедра('Алгебра и геометрия', 'Кафедра алгебры и геометрии').
кафедра('Программирование на Python', 'Кафедра информатики').
кафедра('Дискретная математика', 'Кафедра дискретной математики и алгоритмов').

% Факты о преподавании предметов на кафедрах
преподавание('Иванов Иван Иванович', 'Кафедра математического анализа', 'Математический анализ').
преподавание('Петров Петр Петрович', 'Кафедра алгебры и геометрии', 'Алгебра и геометрия').
преподавание('Сидоров Сидор Сидорович', 'Кафедра информатики', 'Программирование на Python').
преподавание('Кузнецова Ольга Васильевна', 'Кафедра дискретной математики и алгоритмов', 'Дискретная математика').
учится_в_группе(Группа, Студент) :-
    учится_в(Группа, Студент).
староста_группы(Группа, Староста) :-
    староста(Группа, Староста).
направление_студента(Студент, Направление) :-
    учится_в(Группа, Студент),
    группа(Группа, Направление, _, _).
инфо_студента(Студент, ФИО, Телефон) :-
    студент(Студент, ФИО, Телефон).
преподаватель_предмета(Предмет, ФИО) :-
    преподавание(ФИО, _, Предмет).
оценка_по_предмету(Студент, ID_предмета, Оценка) :-
    оценка(ID_предмета, Студент, Оценка);
    учится_в(_, Студент);
    предмет(ID_предмета, _, _).
предмет_студента(Студент, Предмет) :-
    учится_в(Группа, Студент),
    предмет(_, Предмет, Направление),
    группа(Группа, Направление, _, _).
инфо_предмета(Предмет, Кафедра, Преподаватель) :-
    предмет(_,Предмет,_);
    преподавание(Преподаватель, Кафедра, Предмет).
    
